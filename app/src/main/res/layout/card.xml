<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="1dp"
    card_view:cardElevation="0dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tweet_name_of_user"
            android:layout_toEndOf="@+id/profile_pic"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tweet_user_name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tweet_name_of_user"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tweet_text"
            android:layout_below="@+id/tweet_user_name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:lineSpacingExtra="2dp"
            android:textColor="#262626"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@+id/tweet_name_of_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:id="@+id/web_info_card"
            android:layout_below="@+id/tweet_text"
            android:layout_alignStart="@+id/tweet_name_of_user"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/web_image"
                android:layout_width="match_parent"
                android:layout_height="140dp" />



            <TextView
                android:id="@+id/description_text"
                android:layout_below="@+id/web_image"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>





</android.support.v7.widget.CardView>